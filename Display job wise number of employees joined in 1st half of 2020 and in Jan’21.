SELECT JOB,
       COUNT(CASE WHEN HIREDATE BETWEEN TO_DATE('01-JAN-2020', 'DD-MON-YYYY') 
                                    AND TO_DATE('30-JUN-2020', 'DD-MON-YYYY') 
                  THEN 1 END) AS EMP_1ST_HALF_2020,
       COUNT(CASE WHEN TO_CHAR(HIREDATE, 'MM-YYYY') = '01-2021' THEN 1 END) AS EMP_JAN_2021
FROM EMP
GROUP BY JOB;
